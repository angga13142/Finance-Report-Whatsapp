# Database Configuration
DATABASE_URL=postgresql://cashflow_user:cashflow_pass@localhost:5432/cashflow_bot

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-secret-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=24h

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=.wwebjs_auth
WHATSAPP_QR_CODE_TIMEOUT=60000

# Application Configuration
NODE_ENV=development
PORT=3000
TZ=Asia/Makassar

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Report Configuration
REPORT_DELIVERY_TIME=24:00
REPORT_TIMEZONE=Asia/Makassar
REPORT_RETRY_ATTEMPTS=3
REPORT_RETRY_INTERVAL=300000

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=15
RATE_LIMIT_BUTTON_DEBOUNCE_MS=3000

# Security
SESSION_TIMEOUT_MS=600000
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=900000

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=3000

# File Storage
REPORTS_DIR=./reports
MAX_PDF_SIZE_MB=16

# Azure Cloud Agent Configuration (for Cursor MCP)
# Get these values from Azure Portal or using: az account show
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Azure Resource Configuration (optional)
AZURE_RESOURCE_GROUP=finance-bot-rg
AZURE_REGION=southeastasia

# Context7 MCP Server (optional, for library documentation)
CONTEXT7_API_KEY=your-context7-api-key
