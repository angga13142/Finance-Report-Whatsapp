# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# WhatsApp
WHATSAPP_SESSION_PATH=.wwebjs_auth
WHATSAPP_QR_CODE_TIMEOUT=60000

# Application
NODE_ENV=development
PORT=3000
TZ=Asia/Makassar

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Report Configuration
REPORT_DELIVERY_TIME=24:00
REPORT_TIMEZONE=Asia/Makassar
REPORT_RETRY_ATTEMPTS=3
REPORT_RETRY_INTERVAL=300000

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=15
RATE_LIMIT_BUTTON_DEBOUNCE_MS=3000

# Security
SESSION_TIMEOUT_MS=600000
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=900000

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=3000

# File Storage
REPORTS_DIR=./reports
MAX_PDF_SIZE_MB=16

# Button Deprecation Feature Flag
# Controls whether legacy button interactions are enabled
# Default: true (for backward compatibility during transition period)
# Set to false to disable buttons and enable command-only mode
ENABLE_LEGACY_BUTTONS=true
