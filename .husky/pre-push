#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Type check
echo "ğŸ“ Type checking..."
npm run type-check || {
  echo "âŒ Type check failed. Please fix TypeScript errors before pushing."
  exit 1
}

# Lint check
echo "ğŸ”§ Linting..."
npm run lint || {
  echo "âŒ Lint check failed. Please fix linting errors before pushing."
  exit 1
}

# Run unit tests (fast tests only, not E2E)
# Skip if tests directory doesn't exist or no test files
if [ -d "tests/unit" ] && [ "$(find tests/unit -name '*.test.ts' -o -name '*.spec.ts' 2>/dev/null | wc -l)" -gt 0 ]; then
  echo "ğŸ§ª Running unit tests..."
  npm run test:unit || {
    echo "âŒ Unit tests failed. Please fix failing tests before pushing."
    exit 1
  }
else
  echo "âš ï¸  No unit tests found, skipping test step"
fi

echo "âœ… All pre-push checks passed!"

